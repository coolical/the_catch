<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/mobile_navigation"
    app:startDestination="@id/lakeFragment">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.the_catch.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.the_catch.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.the_catch.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/fishFragment"
        android:name="com.example.the_catch.FishFragment"
        android:label="fish"
        tools:layout="@layout/fish_item_list" >
        <argument
            android:name="lakeId"
            app:argType="integer" />
    </fragment>

    <fragment
        android:id="@+id/lakeFragment"
        android:name="com.example.the_catch.LakeFragment"
        android:label="lake"
        tools:layout="@layout/lake_item_list" >
        <action
            android:id="@+id/action_lakeFragment_to_fishFragment"
            app:destination="@id/fishFragment" />
    </fragment>

</navigation>